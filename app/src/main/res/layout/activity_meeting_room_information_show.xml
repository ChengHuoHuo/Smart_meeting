<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bj_bule">
    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#55ffffff"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimary">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="会议室名"
                android:textColor="#525252"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/meeting_room_name"
                android:hint="会议室名"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="#525252"
                android:textSize="14sp" />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#969595"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="容纳人数"
                android:textColor="#525252"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/meeting_room_maxpeople"
                android:hint="会议室最大容纳人数"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="#525252"
                android:textSize="14sp" />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#969595"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="会议室状态"
                android:textColor="#525252"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/meeting_room_status"
                android:hint="会议室状态"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="#525252"
                android:textSize="14sp" />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#969595"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="绑定状态"
                android:textColor="#525252"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/meeting_room_binding"
                android:hint="绑定状态"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="#525252"
                android:textSize="14sp" />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#969595"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginEnd="5dp"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="所属公司"
                android:textColor="#525252"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/meeting_room_company"
                android:hint="所属公司"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="#525252"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_meeting_room_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="图片介绍"
            android:background="@drawable/btn_bg"
            android:textColor="#f7f7f7"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_meeting_room_apply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="会议室预订"
            android:background="@drawable/btn_bg"
            android:textColor="#f7f7f7"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>
