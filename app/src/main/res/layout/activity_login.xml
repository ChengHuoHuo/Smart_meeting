            android:id="@+id/savePasswordCB"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:background="@null"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="center"
            android:text="记住密码">

        </CheckBox>
        <TextView
